const ds = require("../datasources/pammicc-api");

function Project(id, name, description, url, tags) {
  this.id = id;
  this.name = name;
  this.description = description;
  this.url = url;
  this.tags = tags;
}

module.exports = {
  getProjects: async function() {
    try {
      var projects = [];
      const response = await ds.getProjects();
      if (Array.isArray(response)) {
        response.map( project => {
          projects.push(new Project(project._id, project.name, project.description, project.url, project.tags))
        });
        return {
          result: projects,
          error: null
        };
      }
      return {
        result: null,
        error: new Error("An error occurred getting projects from api-datasource.")
      };
    } catch (e) {
      return {
        result: null,
        error: e
      }
    }
  },
  addNewProject: async function(values) {
    try {
      const newProject = {
        "name": values.name,
        "description": values.description
        "url": values.url
        "tags": values.tags
      }

      await ds.newProject(newProject);
      return null;
    } catch (error) {
      return error;
    }
  },
};


